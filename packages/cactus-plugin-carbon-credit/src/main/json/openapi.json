{
  "openapi": "3.0.3",
  "info": {
    "title": "Hyperledger Cactus Plugin - Carbon Credit",
    "description": "Implementation for Carbon Credit Plugin logic",
    "version": "1.0.0",
    "license": {
      "name": "Apache-2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "components": {
    "schemas": {
      "Platform": {
        "type": "string",
        "enum": ["Toucan"]
      },
      "Network": {
        "type": "string",
        "enum": ["polygon", "ethereum", "celo", "alfajores", "base", "base-sepolia"]
      },
      "BuyRequest": {
        "type": "object",
        "properties": {
          "platform": {
            "$ref": "#/components/schemas/Platform"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "paymentToken": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          },
          "walletObject": {
            "type": "string"
          }
        },
        "required": [
          "platform",
          "network",
          "paymentToken",
          "amount",
          "walletObject"
        ]
      },
      "BuyResponse": {
        "type": "object",
        "properties": {
          "txHashSwap": {
            "type": "string"
          },
          "poolTokenAmount": {
            "type": "string"
          },
          "tco2List": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "txHashSwap",
          "poolTokenAmount"
        ]
      },
      "RetireRequest": {
        "type": "object",
        "properties": {
          "platform": {
            "$ref": "#/components/schemas/Platform"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "walletObject": {
            "type": "string"
          },
          "objectsList": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "amounts": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "beneficiary": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "retirementReason": {
            "type": "string"
          }
        },
        "required": [
          "platform",
          "network",
          "walletObject",
          "objectsList",
          "amounts",
          "beneficiary",
          "message",
          "retirementReason"
        ]
      },
      "RetireResponse": {
        "type": "object",
        "properties": {
          "txHashRetire": {
            "type": "string"
          },
          "retirementCertificate": {
            "type": "string"
          }
        },
        "required": [
          "txHashRetire",
          "retirementCertificate"
        ]
      },
      "VCUMetadata": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "symbol": {
            "type": "string"
          },
          "totalSupply": {
            "type": "number"
          },
          "attributes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "symbol",
          "totalSupply",
          "attributes"
        ]
      },
      "GetAvailableVCUsRequest": {
        "type": "object",
        "properties": {
          "platform": {
            "$ref": "#/components/schemas/Platform"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "filterCriteria": {
            "type": "string"
          },
          "orderBy": {
            "type": "string"
          },
          "limit": {
            "type": "string"
          }
        },
        "required": [
          "platform",
          "network"
        ]
      },
      "GetAvailableVCUsResponse": {
        "type": "object",
        "properties": {
          "objectsList": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "totalCount": {
            "type": "number"
          }
        },
        "required": [
          "objectsList",
          "totalCount"
        ]
      },
      "GetVCUMetadataRequest": {
        "type": "object",
        "properties": {
          "platform": {
            "$ref": "#/components/schemas/Platform"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "projectIdentifier": {
            "type": "string"
          },
          "vcuIdentifier": {
            "type": "string"
          }
        },
        "required": [
          "platform",
          "network",
          "projectIdentifier",
          "vcuIdentifier"
        ]
      }
    }
  },
  "paths": {
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/buy": {
      "post": {
        "x-hyperledger-cacti": {
          "http": {
            "verbLowerCase": "post",
            "path": "/api/v1/@hyperledger/cactus-plugin-carbon-credit/buy"
          }
        },
        "operationId": "buyRequest",
        "description": "Acquires carbon inventory from a marketplace.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BuyRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuyResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/retire": {
      "post": {
        "x-hyperledger-cacti": {
          "http": {
            "verbLowerCase": "post",
            "path": "/api/v1/@hyperledger/cactus-plugin-carbon-credit/retire"
          }
        },
        "operationId": "retireRequest",
        "description": "Abstract burn operation that finalizes an offset on the underlying registry for a specific beneficiary and message.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RetireRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RetireResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/get-available-vcus": {
      "get": {
        "x-hyperledger-cacti": {
          "http": {
            "verbLowerCase": "get",
            "path": "/api/v1/@hyperledger/cactus-plugin-carbon-credit/get-available-vcus"
          }
        },
        "operationId": "getAvailableVCUsRequest",
        "description": "Get a list of available VCUs (Verified Carbon Units).",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetAvailableVCUsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with a list of available VCUs.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAvailableVCUsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/get-vcu-metadata": {
      "post": {
        "x-hyperledger-cacti": {
          "http": {
            "verbLowerCase": "post",
            "path": "/api/v1/@hyperledger/cactus-plugin-carbon-credit/get-vcu-metadata"
          }
        },
        "operationId": "getVCUMetadataRequest",
        "description": "Get metadata for a specific VCU.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetVCUMetadataRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with VCU metadata.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VCUMetadata"
                }
              }
            }
          }
        }
      }
    }
  }
}
