{
  "openapi": "3.0.3",
  "info": {
    "title": "Hyperledger Cactus Plugin - Carbon Credit",
    "description": "Implementation for Carbon Credit Plugin logic",
    "version": "1.0.0",
    "license": {
      "name": "Apache-2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "components": {
    "schemas": {
      "Marketplace": {
        "type": "string",
        "enum": ["Toucan"]
      },
      "Network": {
        "type": "string",
        "enum": ["polygon", "ethereum", "celo", "alfajores", "base", "base-sepolia"]
      },
      "SpecificBuyRequest": {
        "type": "object",
        "properties": {
          "marketplace": {
            "$ref": "#/components/schemas/Marketplace"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "paymentToken": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "address": {
                  "type": "string"
                },
                "amount": {
                  "type": "number"
                }
              },
              "required": [
                "address",
                "amount"
              ]
            }
          },
          "walletObject": {
            "type": "string"
          }
        },
        "required": [
          "marketplace",
          "network",
          "paymentToken",
          "items",
          "walletObject"
        ]
      },
      "SpecificBuyResponse": {
        "type": "object",
        "properties": {
          "txHashSwap": {
            "type": "string"
          },
          "assetAmount": {
            "type": "string"
          },
          "tco2List": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "address": {
                  "type": "string"
                },
                "amount": {
                  "type": "string"
                }
              },
              "required": [
                "address",
                "amount"
              ]
            }
          }
        },
        "required": [
          "txHashSwap",
          "assetAmount"
        ]
      },
      "RandomBuyRequest": {
        "type": "object",
        "properties": {
          "marketplace": {
            "$ref": "#/components/schemas/Marketplace"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "paymentToken": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          },
          "walletObject": {
            "type": "string"
          }
        },
        "required": [
          "marketplace",
          "network",
          "amount",
          "walletObject"
        ]
      },
      "RandomBuyResponse": {
        "type": "object",
        "properties": {
          "txHashSwap": {
            "type": "string"
          },
          "assetAmount": {
            "type": "string"
          },
          "tco2List": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "address": {
                  "type": "string"
                },
                "amount": {
                  "type": "string"
                }
              },
              "required": [
                "address",
                "amount"
              ]
            }
          }
        },
        "required": [
          "txHashSwap",
          "assetAmount"
        ]
      },
      "RetireRequest": {
        "type": "object",
        "properties": {
          "marketplace": {
            "$ref": "#/components/schemas/Marketplace"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "walletObject": {
            "type": "string"
          },
          "tco2s": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "amounts": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "beneficiaryAddress": {
            "type": "string"
          },
          "beneficiaryName": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "retirementReason": {
            "type": "string"
          }
        },
        "required": [
          "marketplace",
          "network",
          "walletObject",
          "tco2s",
          "amounts",
          "beneficiaryAddress",
          "beneficiaryName",
          "message",
          "retirementReason"
        ]
      },
      "RetireResponse": {
        "type": "object",
        "properties": {
          "txHashRetire": {
            "type": "string"
          },
          "retirementCertificate": {
            "type": "string"
          }
        },
        "required": [
          "txHashRetire",
          "retirementCertificate"
        ]
      },
      "GetAvailableTCO2sRequest": {
        "type": "object",
        "properties": {
          "marketplace": {
            "$ref": "#/components/schemas/Marketplace"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "filterCriteria": {
            "type": "string"
          },
          "orderBy": {
            "type": "string"
          },
          "limit": {
            "type": "string"
          }
        },
        "required": [
          "marketplace",
          "network"
        ]
      },
      "GetAvailableTCO2sResponse": {
        "type": "object",
        "properties": {
          "tco2List": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "totalCount": {
            "type": "number"
          }
        },
        "required": [
          "tco2List",
          "totalCount"
        ]
      },
      "GetVCUMetadataRequest": {
        "type": "object",
        "properties": {
          "marketplace": {
            "$ref": "#/components/schemas/Marketplace"
          },
          "network": {
            "$ref": "#/components/schemas/Network"
          },
          "projectIdentifier": {
            "type": "string"
          },
          "vcuIdentifier": {
            "type": "string"
          }
        },
        "required": [
          "marketplace",
          "network",
          "projectIdentifier",
          "vcuIdentifier"
        ]
      },
      "VCUMetadata": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "symbol": {
            "type": "string"
          },
          "totalSupply": {
            "type": "number"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "region": { "type": "string" },
              "vintage": { "type": "string" },
              "methodology": { "type": "string" },
              "other": { "type": "string" }
            }
          }
        },
        "required": [
          "name",
          "symbol",
          "totalSupply",
          "attributes"
        ]
      },
      "GetPurchasePriceRequest": {
        "type": "object",
        "properties": {
          "platform": { "$ref": "#/components/schemas/Marketplace" },
          "network": { "$ref": "#/components/schemas/Network" },
          "unit": {
            "type": "string",
            "description": "The token address to retrieve the price for."
          },
          "amount": {
            "type": "number",
            "description": "The amount of Units to price."
          }
        },
        "required": ["platform", "network", "unit", "amount"]
      },
      "GetPurchasePriceResponse": {
        "type": "object",
        "properties": {
          "price": {
            "type": "string",
            "description": "The current price in USDC for the requested amount."
          }
        },
        "required": ["price"]
      }
    }
  },
  "paths": {
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/specific-buy": {
      "post": {
        "operationId": "specificBuyRequest",
        "description": "Acquire a specific basket of TCO2s from a marketplace.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SpecificBuyRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SpecificBuyResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/random-buy": {
      "post": {
        "operationId": "randomBuyRequest",
        "description": "Acquire a random basket of TCO2s from a marketplace.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RandomBuyRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RandomBuyResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/retire": {
      "post": {
        "x-hyperledger-cacti": {
          "http": {
            "verbLowerCase": "post",
            "path": "/api/v1/@hyperledger/cactus-plugin-carbon-credit/retire"
          }
        },
        "operationId": "retireRequest",
        "description": "Abstract burn operation that finalizes an offset on the underlying registry for a specific beneficiary and message.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RetireRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RetireResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/get-available-vcus": {
      "get": {
        "x-hyperledger-cacti": {
          "http": {
            "verbLowerCase": "get",
            "path": "/api/v1/@hyperledger/cactus-plugin-carbon-credit/get-available-vcus"
          }
        },
        "operationId": "getAvailableVCUsRequest",
        "description": "Get a list of available VCUs (Verified Carbon Units).",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetAvailableTCO2sRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with a list of available VCUs.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAvailableTCO2sResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/@hyperledger/cactus-plugin-carbon-credit/get-vcu-metadata": {
      "post": {
        "x-hyperledger-cacti": {
          "http": {
            "verbLowerCase": "post",
            "path": "/api/v1/@hyperledger/cactus-plugin-carbon-credit/get-vcu-metadata"
          }
        },
        "operationId": "getVCUMetadataRequest",
        "description": "Get metadata for a specific VCU.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetVCUMetadataRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with VCU metadata.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VCUMetadata"
                }
              }
            }
          }
        }
      }
    }
  }
}
