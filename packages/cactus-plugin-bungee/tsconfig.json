  "compilerOptions": {
    "composite": true,
    "outDir": "./dist/lib/" /* Redirect output structure to the directory. */,
    "declarationDir": "dist/types",
    "resolveJsonModule": true,
    "allowJs": false,
    "rootDir": "./src/",
    "tsBuildInfoFile": "../../.build-cache/cactus-plugin-bungee.tsbuildinfo",
    "moduleResolution": "Node16"
  },
