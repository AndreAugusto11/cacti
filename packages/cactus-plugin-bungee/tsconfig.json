    "files": true
  },
  "include": [
    "./src",
    "src/**/*.json"
  ],
  "exclude": [
    "./src/test/typescript/fabric-contracts/lock-asset/chaincode-typescript/**/*.ts",
    "./src/test/typescript/fabric-contracts/simple-asset/chaincode-typescript/**/*.ts"
  ],
  "references": [
    {
      "path": "../cactus-plugin-ledger-connector-fabric/tsconfig.json"
    },
    {
      "path": "../cactus-plugin-odap-hermes/tsconfig.json"
    },
  ],
}
