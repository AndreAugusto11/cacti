{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist/lib/", /* Redirect output structure to the directory. */
    "declarationDir": "dist/lib",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "rootDir": "./src/",
    "tsBuildInfoFile": "../../.build-cache/cactus-plugin-satp-hermes.tsbuildinfo",
    "moduleResolution": "Node16",
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "./src",
    "src/**/*.json"
  ],
  "exclude":[
    "./src/main/typescript/cross-chain-mechanisms/bridge/fabric-contracts",
    "./src/test/typescript/fabric/**/*.ts"
  ],
}
